<div id="<%= dom_id(meme) %>" class="card text-center mb-4" style="background-color: #e6f7ff; border: 1px solid #b3d9ff;">
  <%= link_to meme_path(meme), class: "card-header text-decoration-none" do %>
    <h5 class="font-weight-bold m-0 text-dark">
      <%= meme.title %>
    </h5>
  <% end %>

  <div class="card-body d-flex justify-content-center align-items-center">
    <%= image_tag(rails_blob_url(meme.image_url), size: 400, class: "img-fluid rounded") %>
  </div>

  <div class="card-footer text-left mt-auto">
    <div class="d-flex align-items-center mb-2">
      <% user = User.find_by(id: meme.author_id) %>

      <% if user.present? %>
        <%= image_tag(user.avatar, class: "rounded-circle mr-2", width: "32", height: "32", alt: "author_profile_avatar") %>
      <% else %>
        <!-- ObsÅ‚uga przypadku, gdy uÅ¼ytkownik nie istnieje -->
      <% end %>
      <span class="ms-2"><%= User.find_by(id: meme.author_id)&.username %></span>
      <%# <button type="button" class="btn btn-primary btn-sm ml-auto h5">
        4like it!
      </button> %>
    </div>

    <div class="row">
      <div class="col-md-12 text-muted">
        <%= time_ago_in_words(meme.created_at) %> ago
      </div>
    </div>
  </div>
</div>
